@model ByteInoTaskManager.Areas.SecretName.Models.ViewModels.UserDetailViewModel


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Userd.Email <span class="text-primary"> Profile</span></h4>

                        <form asp-action="Edit" asp-controller="Home" asp-area="SecretName" method="post">
                            <input type="hidden" asp-for="Userd.Id" />

                            <div class="table-responsive">
                                <table class="table ">
                                    <tbody>
                                        <tr>
                                            <th>Email</th>
                                            <td>@Model.Userd.Email</td>
                                        </tr>
                                        <tr>
                                            <th>Is Active</th>
                                            <td>
                                                <div class="form-check">
                                                    <input asp-for="Userd.IsActive" class="form-check-input" type="checkbox" />&emsp;
                                                    <label class="@(Model.Userd.IsActive ? "badge badge-success" : "badge badge-danger")">  @(Model.Userd.IsActive ? "Active" : "Inactive")</label>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">Save Changes</button>


                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteUserModal">
                                    Delete User
                                </button>

                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            @* modal *@

            <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteUserModalLabel">Delete User</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete <strong class="fw-bold text-success">@Model.Userd.Email</strong>?
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-danger"" asp-action="Delete" asp-controller="Home" asp-area="SecretName" asp-route-userId="@Model.Userd.Id" method="post">Delete</a>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
     
            @* modal *@
      

            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@(Model.Userd.Email) <span class="text-success"> Created Tasks</span></h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Task Name</th>
                                        <th>Description</th>
                                        <th>Created Date</th>
                                        <th>Status</th>
                                        <th>Category Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.TaskItems != null && Model.TaskItems.Any())
                                    {
                                        @foreach (var task in Model.TaskItems)
                                        {
                                            <tr>
                                                <td>@task.Title</td>
                                                <td>@task.Description</td>
                                                <td>@task.Date</td>
                                                <td>@task.Status</td>
                                                <td>@task.Category?.Name</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-warning">No Category Created</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@(Model.Userd.Email) <span class="text-info"> Created Category</span></h4>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Categories != null && Model.Categories.Any())
                                    {
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <tr>
                                                <td>@cat.Name</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="1" class="text-warning">No Categories Created</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}