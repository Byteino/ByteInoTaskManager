<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ByteInoTaskManager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animated.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/templatemo-chain-app-dev.css" asp-append-version="true" />
</head>
<body>

    <header class="container">
        <nav class="navbar navbar-expand-lg navbar-light fixed-top mt-3 ">
            <div class="container">
                <a class="navbar-brand" asp-controller="home" asp-action="index"><img src="~/Images/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainMenu">
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-info" asp-area="SecretName" asp-controller="Home" asp-action="Index">
                                        Control Panel
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">
                                        Logout
                                    </a>
                                </li>
                          
                            }
                            else if (User.IsInRole("User"))
                            {
                                <li class="nav-item px-2">
                                    <a class="btn btn-success" asp-controller="TaskItems" asp-action="TaskList">
                                        TaskList
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">
                                        Logout
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="LoginRegister">
                                    SignIn/SignUp
                                </a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>


    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
